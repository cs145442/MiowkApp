<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.self.khetan.miowkapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="352dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:textColor="@android:color/black"
            android:text="Numbers"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/numbersActivityTV"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="gotoNumbers"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#379237"
            android:text="Family"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/familyActivityTV"
            android:textColor="#FFFFFF"
            android:onClick="gotoFamily"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#8800A0"
            android:text="Colors"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/colorsActivityTV"
            android:textColor="#FFFFFF"
            android:onClick="gotoColors"/>

        <TextView
            android:id="@+id/phrasesActivityTV"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#16AFCA"
            android:text="Phrases"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp"
            android:onClick="gotoPhrases"
            android:textColor="#FFFFFF"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
