<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.self.khetan.miowkapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main Activity Manifest -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Phrases Activity Manifest -->
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/title_activity_phrases"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.self.khetan.miowkapp.MainActivity" />
        </activity>

        <!--Numbers Activity-->
        <activity
            android:name=".NumbersActivity"
            android:label="@string/title_activity_numbers"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.self.khetan.miowkapp.MainActivity" />
        </activity>

        <!--Family Activity-->
        <activity
            android:name=".FamilyActivity"
            android:label="@string/title_familyActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <!--Colors Activity-->
        <activity
            android:name=".ColorsActivity"
            android:label="@string/title_colorsActivity"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>